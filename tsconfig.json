{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "allowJs": true,
    "checkJs": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "strict": true
  },
  "include": ["src/**/*"],
  "exclude": ["src/**/__tests__/**/*.*", "src/**/*.test.js"]
}
